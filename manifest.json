{
    "manifest_version": 3,
    "name": "Cart Cleaner",
    "version": "1.1",
    "description": "Removes all items from the Amazon and Flipkart cart. Also removes Save Later items",
    "permissions": [
        "scripting",
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/trolley_16.png",
        "48": "icons/trolley_48.png",
        "128": "icons/trolley_128.png"
    }
}